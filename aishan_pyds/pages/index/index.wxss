page{
    background: #fee7b1;
}
.contentFirst {
    width: 100%;
    height: 800rpx;
    text-align: center;
     background:#db5a3a; 
    background-size:cover; 
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    padding: 20rpx 0;
    box-sizing: border-box
}
.shareShow{
    display: flex;
}
.shareHide{
    display: none!important;
}
.hide {
    display: none;
}

.haha_1{
    background-color: #bfbfbf!important;
}
.haha_2{
    background-color: #ffa13b!important;
