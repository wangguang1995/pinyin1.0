.show {
    background: rgba(0, 0, 0, 0.3);
    width: 100%;
    height: 100%;
    position: fixed;
    z-index: 10;
    display: block;
}

.home-zhezhao {
    opacity: 1;
    width: 90%;
    height: 70%;
    margin: 20% auto;
    background: #fdf2de;
    border-radius: 20rpx;
    padding: 30rpx 0;
    box-sizing: border-box;
}

.zhezhaoFather {
    width: 90%;
    height: 100rpx;
    margin: 0 auto;
    text-align: left;
}

.zhezhao-title {
    background: #db5a3a;
    height: 50rpx;
    line-height: 50rpx;
    width: 50rpx;
    text-align: center;
    border-radius: 50%;
    color: #fff;
    float: left;
    margin-right: 50rpx;
}

.zhezhao-text {
    width: 83%;
    color: #000;
    float: left;
    font-size: 26rpx;
    word-wrap: break-word;
}

.zhzhaoBottom {
    color: #cc6244;
    font-size: 36rpx;
    display: block;
    margin-top: 20rpx;
    width: 60%;
    margin: 30rpx auto;
}

.clearfix:after {
    content: ".";
    display: block;
    height: 0;
    clear: both;
    visibility: hidden;
}

.zhezhaoBtn {
    background: #f3c844;
    width: 40%;
    font-size: 30rpx;
    border-radius: 50rpx;
    margin: 50rpx auto;
}

.icon-hide {
    height: 50rpx;
    width: 50rpx;
    position: absolute;
    left: 50%;
    margin-left: -25rpx;
    bottom: 5%;
}

.contentBanner {
    width: 90%;
    height: 150rpx;
    margin-bottom: 20rpx;
}

.contentTitle {
    font-size: 80rpx !important;
}

.contentFirstText {
    font-size: 30rpx;
    line-height: 80rpx;
    color: #f9daa3;
}

.contentBtn {
    width: 80%;
    border-radius: 60rpx;
}

.contentFenXiang {
    width: 90%;
    height: 100rpx;
}

.contentBottom {
    padding: 20rpx 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    box-sizing: border-box;
}

.BottomFirst {
    width: 90%;
    display: flex;
    justify-content: space-around;
    border: 1px solid #cb543e;
    box-sizing: border-box;
    margin: 0 auto;
}

.BottomFirst text {
    width: 33.3%;
    text-align: center;
    font-size: 30rpx;
    color: #cb543e;
    line-height: 60rpx;
    border-right: 1px solid #cb543e;
    box-sizing: border-box;
}

.btn {
    width: 90%;
    height: 120rpx;
    background: #ffda2f;
    color: #66467a;
    line-height: 100rpx;
    border-radius: 60rpx;
    border: 5px solid #4a2b60;
    font-size: 60rpx;
    font-weight: bold;
}

.borderNone {
    border: none !important;
}

.active {
    background: #cb543e;
    color: #f9d8a5 !important;
    display: block !important;
}

.active2 {
    display: block !important;
}

.advertising {
